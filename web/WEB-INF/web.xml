<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Rutas</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.rutas.Rutas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RutasVendedor</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.rutas.RutasVendedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadProduct</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.seller.UploadProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Selects</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.seller.Selects</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProduct</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.seller.UpdateProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registro</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.registro.registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.login.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>generateSale</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.ventas.generateSale</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizaUsuEmp</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.actualizacion.actualizaUsuEmp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestionarPedidos</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.ventas.gestionarPedidos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>filtro</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.filtro.filtro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>informes</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.informes.informes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Rutas</servlet-name>
        <url-pattern>/Searching...</url-pattern>
        <url-pattern>/activarCuenta</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/preguntas</url-pattern>
        <url-pattern>/usuario</url-pattern>
        <url-pattern>/ventasVendedor</url-pattern>
        <url-pattern>/misPedidos</url-pattern>
        <url-pattern>/realizarInformes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RutasVendedor</servlet-name>
        <url-pattern>/Products</url-pattern>
        <url-pattern>/newProduct</url-pattern>
        <url-pattern>/delProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadProduct</servlet-name>
        <url-pattern>/UploadProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Selects</servlet-name>
        <url-pattern>/getCategorys</url-pattern>
        <url-pattern>/getProducts</url-pattern>
        <url-pattern>/getImages</url-pattern>
        <url-pattern>/getProductsByDateTime</url-pattern>
        <url-pattern>/getImagesByProduct</url-pattern>
        <url-pattern>/getInfoCompanyByProduct</url-pattern>
        <url-pattern>/obtenerProducto</url-pattern>
        <url-pattern>/getProductsRandom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProduct</servlet-name>
        <url-pattern>/UpdateProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>generateSale</servlet-name>
        <url-pattern>/generateSale</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizaUsuEmp</servlet-name>
        <url-pattern>/actualizaUsuEmp</url-pattern>
        <url-pattern>/actualizarPersona</url-pattern>
        <url-pattern>/actualizarUsuario</url-pattern>
        <url-pattern>/recuperarClave</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestionarPedidos</servlet-name>
        <url-pattern>/gestionarPedidos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>filtro</servlet-name>
        <url-pattern>/filtro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>informes</servlet-name>
        <url-pattern>/informes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
