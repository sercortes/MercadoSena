<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Rutas</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.rutas.Rutas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RutasVendedor</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.rutas.RutasVendedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadProduct</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.seller.UploadProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Selects</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.seller.Selects</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comprador</servlet-name>
        <servlet-class>co.edu.sena.mercado.controller.comprador.comprador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Rutas</servlet-name>
        <url-pattern>/ProductoDetails</url-pattern>
        <url-pattern>/Searching...</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RutasVendedor</servlet-name>
        <url-pattern>/HomeSeller</url-pattern>
        <url-pattern>/Products</url-pattern>
        <url-pattern>/newProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadProduct</servlet-name>
        <url-pattern>/UploadProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Selects</servlet-name>
        <url-pattern>/getCategorys</url-pattern>
        <url-pattern>/getProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>comprador</servlet-name>
        <url-pattern>/comprador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
